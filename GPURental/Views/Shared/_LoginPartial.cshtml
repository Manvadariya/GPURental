@using Microsoft.AspNetCore.Identity
@using GPURental.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // --- NEW ROLE-BASED LINKS ---
        if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-info" asp-controller="Admin" asp-action="Disputes">Admin Dashboard</a>
            </li>
        }
        if (User.IsInRole("Provider"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Listings" asp-action="Index">My Listings</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Wallet" asp-action="Index">My Earnings</a>
            </li>
        }
        if (User.IsInRole("Renter"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Wallet" asp-action="Index">My Wallet</a>
            </li>
        }
        // --- END NEW LINKS ---

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Manage" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>