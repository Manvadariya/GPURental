@model IEnumerable<GpuListing>
@{
    ViewData["Title"] = "My Listings Dashboard";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Listing</a>
</p>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>GPU Model</th>
                <th>Price Per Hour</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.GpuModel)</td>
                    <td>$@((item.PricePerHourInCents / 100.0m).ToString("F2"))</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ListingId" class="btn btn-sm btn-info">Edit</a>

                        @if (item.Status == GpuStatus.Draft || item.Status == GpuStatus.Paused)
                        {
                            <form asp-action="Publish" asp-route-id="@item.ListingId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-success">Publish</button>
                            </form>
                        }

                        @if (item.Status == GpuStatus.Published)
                        {
                            <form asp-action="Pause" asp-route-id="@item.ListingId" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-warning">Pause</button>
                            </form>
                        }

                        <a asp-action="Delete" asp-route-id="@item.ListingId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have not created any listings yet. <a asp-action="Create">Create one now!</a></p>
}