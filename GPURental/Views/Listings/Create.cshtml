@model ListingCreateViewModel
@{
    ViewData["Title"] = "Create a New Listing";
}

<h1>@ViewData["Title"]</h1>
<h4>Offer your GPU for others to rent.</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        @* The form tag MUST have enctype to support file uploads *@
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="GpuModel"></label>
                    <input id="gpuModelInput" asp-for="GpuModel" class="form-control" /> @* <-- ADD id="gpuModelInput" *@
                    <span asp-validation-for="GpuModel" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CpuModel"></label>
                    <input asp-for="CpuModel" class="form-control" />
                    <span asp-validation-for="CpuModel" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="VramInGB"></label>
                    <input id="vramInput" asp-for="VramInGB" type="number" class="form-control" /> @* <-- This one should already be correct *@
                    <span asp-validation-for="VramInGB" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="RamInGB"></label>
                    <input asp-for="RamInGB" type="number" class="form-control" />
                    <span asp-validation-for="RamInGB" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DiskInGB"></label>
                    <input asp-for="DiskInGB" type="number" class="form-control" />
                    <span asp-validation-for="DiskInGB" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="OperatingSystem"></label>
                <input asp-for="OperatingSystem" class="form-control" />
                <span asp-validation-for="OperatingSystem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PricePerHourInCents"></label>
                <div class="input-group">
                    <input id="priceInput" asp-for="PricePerHourInCents" type="number" class="form-control" />
                    <div class="input-group-append">
                        <button id="suggestPriceBtn" type="button" class="btn btn-outline-info">AI Suggest</button>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Image"></label>
                <div class="custom-file">
                    <input asp-for="Image" class="custom-file-input">
                    <label class="custom-file-label">Choose image...</label>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Listing</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#suggestPriceBtn').on('click', function () {
                var gpuModel = $('#gpuModelInput').val(); // Make sure your GpuModel input has id="gpuModelInput"
                var vram = $('#vramInput').val();

                if (gpuModel && vram) {
                    fetch(`/Listings/SuggestPrice?gpuModel=${gpuModel}&vram=${vram}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                $('#priceInput').val(data.price);
                            } else {
                                alert("Could not suggest a price. Please fill in GPU Model and VRAM.");
                            }
                        });
                } else {
                    alert("Please fill in GPU Model and VRAM before suggesting a price.");
                }
            });
        });
    </script>
}