@model ListingCreateViewModel
@{
    ViewData["Title"] = "Create a GPU Listing";
}

<!-- Apply the same background and font as the login page -->
<script>document.body.classList.add('login-page-background');</script>

<div class="login-container">
    <div class="login-card shadow-lg" style="max-width: 700px;">
        <div class="text-center">
            <h1 class="h3 font-weight-bold mb-2">Create a GPU Listing</h1>
            <p class="text-muted">Fill in the details for your machine.</p>
        </div>

        <form class="mt-4" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger small"></div>

            <div class="form-group">
                <label asp-for="Title" class="login-label"></label>
                <input asp-for="Title" class="form-control login-input" required />
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="GpuModel" class="login-label"></label>
                    <input asp-for="GpuModel" id="gpuModelInput" class="form-control login-input" required />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CpuModel" class="login-label"></label>
                    <input asp-for="CpuModel" class="form-control login-input" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="VramInGB" class="login-label"></label>
                    <input asp-for="VramInGB" id="vramInput" type="number" class="form-control login-input" required />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="RamInGB" class="login-label"></label>
                    <input asp-for="RamInGB" type="number" class="form-control login-input" required />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DiskInGB" class="login-label"></label>
                    <input asp-for="DiskInGB" type="number" class="form-control login-input" required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="OperatingSystem" class="login-label"></label>
                    <input asp-for="OperatingSystem" class="form-control login-input" />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Location" class="login-label"></label>
                    <input asp-for="Location" class="form-control login-input" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PricePerHourInINR" class="login-label"></label>
                <div class="input-group">
                    <input asp-for="PricePerHourInINR" id="priceInput" type="number" class="form-control login-input" required />
                    <div class="input-group-append">
                        <button id="suggestPriceBtn" type="button" class="btn btn-outline-secondary suggest-btn">AI Suggest</button>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="login-label"></label>
                <div class="custom-file">
                    <input asp-for="Image" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file...</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block glow-accent mt-4">Create Listing</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Script to display selected file name
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });

            // AI Suggest Price script
            $('#suggestPriceBtn').on('click', function () {
                var gpuModel = $('#gpuModelInput').val();
                var vram = $('#vramInput').val();

                if (gpuModel && vram) {
                    $('#suggestPriceBtn').text('Suggesting...');
                    fetch(`/Listings/SuggestPrice?gpuModel=${encodeURIComponent(gpuModel)}&vram=${vram}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success && data.price > 0) {
                                $('#priceInput').val(data.price);
                            } else {
                                alert("Could not suggest a price. Please check GPU Model and VRAM.");
                            }
                            $('#suggestPriceBtn').text('AI Suggest');
                        });
                } else {
                    alert("Please fill in GPU Model and VRAM before suggesting a price.");
                }
            });
        });
    </script>
}