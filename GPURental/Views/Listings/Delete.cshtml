@model GpuListing
@{
    ViewData["Title"] = "Delete Listing";
}

<!-- Apply the same background and font as the other form pages -->
<script>document.body.classList.add('login-page-background');</script>

<div class="login-container">
    <div class="login-card shadow-lg" style="max-width: 600px;">
        <div class="text-center">
            <h1 class="h3 font-weight-bold mb-2">Delete Listing</h1>
            <p class="text-danger">Are you sure you want to permanently delete this listing?</p>
        </div>

        <div class="delete-summary-box my-4">
            <h4 class="font-weight-bold">@Model.Title</h4>
            <p class="text-muted mb-0">@Model.GpuModel &bull; @Model.VramInGB GB VRAM</p>
        </div>

        <p class="text-center text-muted small">This action cannot be undone. All data associated with this listing will be removed.</p>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="ListingId" />

            <div class="form-row">
                <div class="col">
                    <a asp-action="Index" asp-controller="Dashboard" class="btn btn-secondary btn-block">Cancel</a>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-danger btn-block">Yes, Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>