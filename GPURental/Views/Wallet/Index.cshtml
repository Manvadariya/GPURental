@model WalletDashboardViewModel
@{
    ViewData["Title"] = "My Wallet";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <!-- Balance & Add Funds -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Current Balance</h5>
                <h2 class="display-4 text-success">
                    $@((Model.CurrentBalanceInCents / 100.0m).ToString("F2"))
                </h2>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Add Funds</h5>
                <form asp-action="AddFunds" method="post">
                    <div class="form-group">
                        <label>Amount (in USD)</label>
                        <input type="number" name="amount" class="form-control" min="1.00" step="0.01" required />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Add Funds</button>
                    <small class="form-text text-muted">This is a demo. No real payment will be processed.</small>
                </form>
            </div>
        </div>
    </div>

    <!-- Transaction History -->
    <div class="col-md-8">
        <h4>Transaction History</h4>
        @if (Model.TransactionHistory.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th></th> <!-- New empty header for the action links -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model.TransactionHistory)
                    {
                        <tr>
                            <td>@entry.CreatedAt.ToShortDateString()</td>
                            <td>
                                @if (entry.Type == LedgerEntryType.Payout)
                                {
                                    <span>Provider Payout</span>
                                }
                                else
                                {
                                    @entry.Type
                                }
                            </td>
                            @{
                                // Set text color to red for charges, green for all income
                                var amountClass = entry.Type == LedgerEntryType.Charge ? "text-danger" : "text-success";
                            }
                            <td class="@amountClass">
                                @((entry.AmountInCents / 100.0m).ToString("F2"))
                            </td>
                            <td>@entry.Status</td>
                            <td>
                                @if (entry.Type == LedgerEntryType.Charge && entry.RentalJobId != null)
                                {
                                    <a asp-controller="Review" asp-action="Create" asp-route-rentalJobId="@entry.RentalJobId">Leave Review</a>
                                    <span class="mx-2">|</span>
                                    <a asp-controller="Dispute" asp-action="Create" asp-route-rentalJobId="@entry.RentalJobId" class="text-danger">Report Issue</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>You have no transaction history yet.</p>
        }
    </div>
</div>