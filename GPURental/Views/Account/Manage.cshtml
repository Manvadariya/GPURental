@model ManageAccountViewModel
@{
    ViewData["Title"] = "Manage Your Account";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Manage" method="post">
            <h4>Update your account settings.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Timezone"></label>
                <input asp-for="Timezone" class="form-control" />
            </div>

            <hr />
            <h4>Change Password</h4>
            <small class="text-muted">Leave these fields blank to keep your current password.</small>

            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update Account</button>
        </form>
        @if (!User.IsInRole("Provider") && !User.IsInRole("Admin"))
        {
            <hr />
            <h4>Provider Settings</h4>
            <p>
                Want to rent out your own GPU and earn money? Become a provider!
            </p>
            <form asp-action="BecomeProvider" method="post">
                <button type="submit" class="btn btn-success">Become a Provider</button>
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}