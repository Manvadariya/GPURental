@{
    ViewData["Title"] = "Access Denied";
}

<header>
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <p class="text-danger">You do not have permission to access this resource.</p>
</header>

<div class="mt-4">
    <p>
        This area of the website is restricted. If you believe you should have access, please contact the site administrator.
    </p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Homepage</a>
</div>