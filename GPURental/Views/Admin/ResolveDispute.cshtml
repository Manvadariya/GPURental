@model Dispute
@{
    ViewData["Title"] = "Resolve Dispute";
}

<h1>@ViewData["Title"]</h1>
<h4>Dispute ID: @Model.DisputeId</h4>
<hr />

<div class="row">
    <div class="col-md-7">
        <h3>Dispute Details</h3>
        <dl class="row">
            <dt class="col-sm-4">Date Raised</dt>
            <dd class="col-sm-8">@Model.CreatedAt</dd>

            <dt class="col-sm-4">Raised By</dt>
            <dd class="col-sm-8">@Model.RaisedByUser.Email</dd>

            <dt class="col-sm-4">Reason</dt>
            <dd class="col-sm-8">@Model.Reason</dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8"><p>@Model.Description</p></dd>
        </dl>

        <h3>Related Job Details</h3>
        <dl class="row">
            <dt class="col-sm-4">Job ID</dt>
            <dd class="col-sm-8">@Model.RentalJob.RentalJobId</dd>

            <dt class="col-sm-4">Listing</dt>
            <dd class="col-sm-8">@Model.RentalJob.GpuListing.Title</dd>

            <dt class="col-sm-4">Provider</dt>
            <dd class="col-sm-8">@Model.RentalJob.GpuListing.Provider.Email</dd>

            <dt class="col-sm-4">Final Charge</dt>
            <dd class="col-sm-8">$@((Model.RentalJob.FinalChargeInCents / 100.0m)?.ToString("F2"))</dd>
        </dl>
    </div>

    <div class="col-md-5">
        <div class="card bg-light">
            <div class="card-body">
                <h4 class="card-title">Take Action</h4>
                <form asp-action="ResolveDispute" method="post">
                    <input type="hidden" name="disputeId" value="@Model.DisputeId" />

                    <div class="form-group">
                        <label for="refundAmount">Refund Amount (USD)</label>
                        <input type="number" id="refundAmount" name="refundAmount" class="form-control" step="0.01" min="0" value="0.00" />
                        <small class="form-text text-muted">Enter 0 for no refund. The amount will be transferred from the provider to the renter.</small>
                    </div>
                    <hr />
                    <div class="form-group">
                        <button type="submit" name="resolution" value="approve" class="btn btn-success">Approve Refund & Resolve</button>
                        <button type="submit" name="resolution" value="reject" class="btn btn-danger mt-2">Reject Claim</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>