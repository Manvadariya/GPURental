@model PricingCalculatorViewModel
@{
    ViewData["Title"] = "Pricing Calculator";
}

<div class="calculator-page-wrapper">
    <div class="calculator-container-final">
        <!-- Left Panel: Inputs -->
        <div class="input-panel">
            <h1>Pricing Calculator</h1>
            <p class="subtitle">Estimate your rental cost</p>

            <form asp-action="Index" method="post">
                <div class="form-group">
                    <label asp-for="SelectedGpuModel"></label>
                    <select asp-for="SelectedGpuModel" asp-items="Model.GpuTypes" class="form-control custom-select-style" required>
                        <option value="">Please select a GPU</option>
                    </select>
                    <span asp-validation-for="SelectedGpuModel" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Seconds"></label>
                    <input asp-for="Seconds" type="number" class="form-control" min="1" step="any" />
                    <span asp-validation-for="Seconds" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary-calc">Calculate Cost</button>
            </form>
        </div>

        <!-- Right Panel: Cost Display -->
        <div class="cost-panel">
            @if (Model.CalculationSuccess)
            {
                <h4>Estimated Cost</h4>
                <div class="price-display">
                    ₹@Model.EstimatedCost.ToString("F2")
                </div>
                <p class="price-description">
                    For a <strong>@Model.SelectedGpuModel</strong> rented for <strong>@Model.Seconds Seconds(s)</strong>.
                </p>
                <a asp-controller="Marketplace" asp-action="Index" class="btn btn-secondary-calc">Browse Marketplace</a>
            }
            else
            {
                <h4>Live Cost</h4>
                <div class="price-display">₹0.00</div>
                <p class="price-description">Fill out the form to see your estimated cost.</p>
            }
        </div>
    </div>
</div>