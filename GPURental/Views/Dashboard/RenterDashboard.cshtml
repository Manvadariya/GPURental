@model RenterDashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
}

<h1>@ViewData["Title"]</h1>
<hr />

<!-- Active Jobs Section -->
<h3>Active Rentals</h3>
@if (Model.ActiveJobs.Any())
{
    <div class="list-group">
        @foreach (var job in Model.ActiveJobs)
        {
            <a asp-controller="Rental" asp-action="Status" asp-route-id="@job.RentalJobId" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@job.GpuListing.Title</h5>
                    <small>Status: <span class="badge badge-success">@job.Status</span></small>
                </div>
                <p class="mb-1">Started on @job.ActualStartAt.Value.ToShortDateString() at @job.ActualStartAt.Value.ToShortTimeString()</p>
                <small>Click to view status and stop the job.</small>
            </a>
        }
    </div>
}
else
{
    <p>You have no active rentals. <a asp-controller="Marketplace" asp-action="Index">Find a GPU to rent!</a></p>
}

<hr class="my-4" />

<h3>Rental History</h3>
@if (Model.JobHistory.Any())
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Listing</th>
                <th>End Date</th>
                <th>Duration</th>
                <th>Final Cost</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model.JobHistory)
            {
                <tr>
                    <td>@job.GpuListing.Title</td>
                    <td>@job.ActualEndAt?.ToShortDateString()</td>
                    <td>@((job.ActualEndAt - job.ActualStartAt)?.TotalMinutes.ToString("F0")) mins</td>
                    <td>$@((job.FinalChargeInCents / 100.0m)?.ToString("F2"))</td>
                    <td><span class="badge badge-secondary">@job.Status</span></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no past rental jobs.</p>
}

<hr class="my-4" />

<div class="row">
    <!-- My Activity -->
    <div class="col-md-6">
        <h4>My Recent Activity</h4>

        <h5>My Disputes</h5>
        @if (Model.MyDisputes.Any())
        {
            <ul class="list-group">
                @foreach (var dispute in Model.MyDisputes)
                {
                    <li class="list-group-item">@dispute.Reason - Status: @dispute.Status</li>
                }
            </ul>
        }
        else
        {

            <p>You have not filed any disputes.</p>
        }

        <h5 class="mt-3">My Reviews</h5>
        @if (Model.MyReviews.Any())
        {
            <ul class="list-group">
                @foreach (var review in Model.MyReviews)
                {
                    <li class="list-group-item">@review.Rating stars - "@review.Comment"</li>
                }
            </ul>
        }
        else
        {

            <p>You have not submitted any reviews.</p>
        }

    </div>

    <!-- Recent Transactions -->
    <div class="col-md-6">
        <h4>Recent Transactions</h4>
        <table class="table">
            <tbody>
                @foreach (var entry in Model.TransactionHistory)
                {
                    <tr>
                        <td>@entry.CreatedAt.ToShortDateString()</td>
                        <td>
                            @if (entry.Type == LedgerEntryType.Payout)
                            {
                                <span>Provider Payout</span>
                            }
                            else
                            {

                                @entry.Type
                            }
                        </td>
                        <td class="@(entry.Type == LedgerEntryType.Charge ? "text-danger" : "text-success")">
                            $@((entry.AmountInCents / 100.0m).ToString("F2"))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Wallet" asp-action="Index">View Full Wallet History & Add Funds</a>
    </div>
</div>