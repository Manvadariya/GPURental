@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-dashboard-container">
    <h1 class="admin-header">@ViewData["Title"]</h1>

    <!-- Stat Cards -->
    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="admin-stat-card shadow-lg" style="background-color: #3b82f6;">
                <p class="stat-title">Total Users</p>
                <p class="stat-number">@Model.TotalUsers</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="admin-stat-card shadow-lg" style="background-color: #10b981;">
                <p class="stat-title">Total Listings</p>
                <p class="stat-number">@Model.TotalListings</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="admin-stat-card shadow-lg" style="background-color: #f59e0b;">
                <p class="stat-title">Pending Disputes</p>
                <p class="stat-number">@Model.PendingDisputes.Count()</p>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="admin-content-area">
        <!-- Pending Disputes Table -->
        <div>
            <h2 class="section-header">Pending Disputes</h2>
            <div class="admin-table-card shadow-lg">
                <div class="table-responsive">
                    <table class="table admin-table">
                        <thead>
                            <tr>
                                <th>Date Raised</th>
                                <th>Raised By</th>
                                <th>Reason</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PendingDisputes.Any())
                            {
                                @foreach (var item in Model.PendingDisputes)
                                {
                                    <tr>
                                        <td>@item.CreatedAt.ToShortDateString()</td>
                                        <td>@item.RaisedByUser.Email</td>
                                        <td>@item.Reason</td>
                                        <td class="text-right">
                                            <a asp-controller="Admin" asp-action="ResolveDispute" asp-route-id="@item.DisputeId" class="btn btn-primary btn-sm admin-action-btn">View & Resolve</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center p-4">No pending disputes.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Currently Running Jobs Table -->
        <div>
            <h2 class="section-header">Currently Running Jobs</h2>
            <div class="admin-table-card shadow-lg">
                <div class="table-responsive">
                    <table class="table admin-table">
                        <thead>
                            <tr>
                                <th>Start Time</th>
                                <th>Renter</th>
                                <th>Listing</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ActiveJobs.Any())
                            {
                                @foreach (var item in Model.ActiveJobs)
                                {
                                    <tr>
                                        <td>@item.ActualStartAt</td>
                                        <td>@item.Renter.Email</td>
                                        <td>@item.GpuListing.Title</td>
                                        <td class="text-right">
                                            <a asp-controller="Rental" asp-action="Status" asp-route-id="@item.RentalJobId" class="btn btn-info btn-sm admin-action-btn" target="_blank">View Job</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center p-4">There are no jobs currently running.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>